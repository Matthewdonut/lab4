<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a1536381.lab4.MapActivity">

    <EditText
        android:id="@+id/location"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:hint="@string/location" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchOnMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="searchMaps"
            android:text="@string/searchOnMaps" />

        <Button
            android:id="@+id/searchOnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="searchGoogle"
            android:text="@string/searchOnGoogle" />
    </LinearLayout>

    <EditText
        android:id="@+id/errors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/errors" />

</LinearLayout>
